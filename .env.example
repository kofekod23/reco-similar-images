# weaviate-local/.env (exemple – à copier dans weaviate-local/.env sans le committer)
WEAVIATE_VERSION=1.32.2
WEAVIATE_API_KEY=changeme

# Auth API key
AUTHENTICATION_APIKEY_ENABLED=true
AUTHENTICATION_APIKEY_ALLOWED_KEYS=${WEAVIATE_API_KEY}
AUTHENTICATION_APIKEY_USERS=admin

# RBAC (désactivé ou root=admin)
AUTHORIZATION_RBAC_ENABLED=false
AUTHORIZATION_RBAC_ROOT_USERS=admin

# Client (variables lues par tes scripts)
WEAVIATE_ENDPOINT=http://localhost:8080
WEAVIATE_GRPC=localhost:50051
